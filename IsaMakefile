
## targets

default: report
images: 
test: report

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true -i true -d pdf  ## -D generated


## report

report: $(LOG)/HOL-report.gz

$(LOG)/HOL-report.gz: ## report/ROOT.ML report/document/root.tex report/*.thy
	@$(USEDIR) HOL report


## clean

clean:
	@rm -f $(LOG)/HOL-report.gz

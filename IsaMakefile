
## targets

default: reports
images: 
test: reports

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true -i true -d pdf  ## -D generated


## reports

reports: $(LOG)/HOL-reports.gz

$(LOG)/HOL-reports.gz: ## reports/ROOT.ML reports/document/root.tex reports/*.thy
	@$(USEDIR) HOL reports


## clean

clean:
	@rm -f $(LOG)/HOL-reports.gz
